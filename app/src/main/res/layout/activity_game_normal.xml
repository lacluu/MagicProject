<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#bdbdbd">

    <LinearLayout
        android:id="@+id/linearBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSquareNumber"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.97"
                    android:text="Square "
                    android:layout_marginTop="3dp"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="@color/white_font" />

                <TextView
                    android:id="@+id/txtSum"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:text="Sum = "
                    android:layout_marginTop="3dp"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textColor="@color/white_font" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="11:12:12"
            android:textAlignment="center"
            android:textColor="@color/white_font"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:background="@color/button_background"
            android:textColor="@color/button_font_color"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:onClick="clickPauseGame"
            android:text="||" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="300dp"
        android:layout_height="300dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearBar"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDelete"
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearTop"
        android:layout_marginLeft="300dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/button_background"
            android:textColor="@color/button_font_color"
            android:onClick="clickToDelete"
            android:text="Delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutNumber"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/linearTop"
        android:layout_alignStart="@+id/linearTop"
        android:layout_below="@+id/linearTop"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutRow1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="1" />

            <Button
                android:id="@+id/btnNum2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="2" />

            <Button
                android:id="@+id/btnNum3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="3" />

            <Button
                android:id="@+id/btnNum4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRow2"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="5" />

            <Button
                android:id="@+id/btnNum6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="6" />

            <Button
                android:id="@+id/btnNum7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="7" />

            <Button
                android:id="@+id/btnNum8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRow3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="9" />

            <Button
                android:id="@+id/btnNum10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="10" />

            <Button
                android:id="@+id/btnNum11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="11" />

            <Button
                android:id="@+id/btnNum12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRow4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="13" />

            <Button
                android:id="@+id/btnNum14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="14" />

            <Button
                android:id="@+id/btnNum15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="15" />

            <Button
                android:id="@+id/btnNum16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/button_background"
                android:textColor="@color/button_font_color"
                android:onClick="clickNum"
                android:text="16" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>